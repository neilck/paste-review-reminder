{
  "name": "paste-review-reminder",
  "displayName": "Paste Review Reminder",
  "description": "Reminds you to review pasted or AI-generated code blocks",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pasteReviewReminder.dismissRegion",
        "title": "Dismiss Review Reminder"
      }
    ],
    "configuration": {
      "title": "Paste Review Reminder",
      "properties": {
        "pasteReviewReminder.minimumLines": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Minimum number of lines to trigger a review reminder"
        },
        "pasteReviewReminder.characterThreshold": {
          "type": "number",
          "default": 110,
          "minimum": 1,
          "description": "Characters per second threshold to detect paste/AI generation"
        },
        "pasteReviewReminder.highlightColor": {
          "type": "string",
          "default": "rgba(255, 200, 100, 0.15)",
          "description": "Background color for highlighted regions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
