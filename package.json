{
  "name": "paste-review-reminder",
  "displayName": "Paste Review Reminder",
  "description": "Reminds you to review pasted or AI-generated code blocks",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/neilck/paste-review-reminder.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onTextEditor:*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Paste Review Reminder",
      "properties": {
        "pasteReviewReminder.minimumPasteLines": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Minimum lines to trigger highlighting for pasted code"
        },
        "pasteReviewReminder.minimumStreamingLines": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Minimum lines to trigger highlighting for fast typing/AI streaming"
        },
        "pasteReviewReminder.typingSpeedThreshold": {
          "type": "number",
          "default": 110,
          "minimum": 1,
          "description": "Characters per second threshold to detect fast typing (for AI completions)"
        },
        "pasteReviewReminder.highlightColor": {
          "type": "string",
          "default": "rgba(255, 200, 100, 0.15)",
          "description": "Background color for highlighted regions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
